<input type="text" name="{{ field.name }}" value="{{ cstruct }}"
        {% if field.widget.size %}
       size="{{ field.widget.size }}"
        {% endif %}
        {% if field.widget.css_class %}
       class="{{ field.widget.css_class }}"
        {% endif %}
       id="{{ field.oid }}"
       {% if field.description %}
           title="{{ _(field.description) }}"
       {% endif %}
       />
<script type="text/javascript">
    deform.addCallback(
            '{{ field.oid }}',
            function (oid) {
                $('#' + oid).tooltip({'position': { my: 'left center', at: 'right+10 center' }, 'tooltipClass': 'right'}).datepicker({dateFormat:'yy-mm-dd'});
            }
    );
</script>
